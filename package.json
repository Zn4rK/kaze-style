{
  "name": "kaze-style",
  "version": "0.0.0",
  "author": "Taishi Naritomi",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "clean": "rimraf **/dist **/.next **/.turbo **/node_modules",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev",
    "test": "turbo run test --filter=./packages/*",
    "code:fix": "eslint . --fix --ignore-path .gitignore && prettier . --write --ignore-path .gitignore",
    "code:check": "yarn workspaces run tsc --noEmit && eslint . --ignore-path .gitignore && prettier . --check --ignore-path .gitignore",
    "readme:copy": "tsx scripts/copyReadme.ts",
    "readme:check": "tsx scripts/checkReadme.ts",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.3",
    "@tsconfig/strictest": "^1.0.1",
    "@types/babel__helper-plugin-utils": "^7.10.0",
    "@types/node": "^18.7.11",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/stylis": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "esbuild": "^0.15.7",
    "esbuild-node-externals": "^1.5.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "tsdx": "^0.14.1",
    "tsx": "^3.8.2",
    "turbo": "^1.4.3",
    "typescript": "^4.7.4"
  }
}
